<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <!-- File system publish (local folder). Adjust PublishDir as needed. -->
    <PublishProtocol>FileSystem</PublishProtocol>
    <PublishDir>bin\Release\net9.0\publish\win-x64-nativeaot\</PublishDir>

    <!-- Build settings -->
    <Configuration>Release</Configuration>
    <Platform>Any CPU</Platform>
    <TargetFramework>net9.0</TargetFramework>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <SelfContained>true</SelfContained>

    <!-- NativeAOT options -->
    <PublishAot>true</PublishAot>
    <PublishSingleFile>true</PublishSingleFile>
    <PublishTrimmed>true</PublishTrimmed>
    <!-- Often recommended for deterministic single-file native images -->
    <InvariantGlobalization>true</InvariantGlobalization>

    <!-- Optional: remove debug symbols from publish output -->
    <DebugType>none</DebugType>
  </PropertyGroup>
</Project>
