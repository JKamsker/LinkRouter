<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LinkRouter.Settings.ViewModels;assembly=LinkRouter.Settings.Core"
             x:Class="LinkRouter.Settings.Avalonia.Views.AboutPage">
    <ScrollViewer>
        <StackPanel Margin="{StaticResource PagePadding}" Spacing="24">
            <TextBlock Text="About" Style="{StaticResource PageTitleTextBlockStyle}" />

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="{Binding AppName}" FontSize="22" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding VersionLabel}" />
                    <Button Content="Open repository" Command="{Binding OpenRepositoryCommand}" Width="200" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
