<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LinkRouter.Settings.ViewModels;assembly=LinkRouter.Settings.Core"
             x:Class="LinkRouter.Settings.Avalonia.Views.AboutPage">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="{StaticResource SettingsPageMargin}"
                    Spacing="{StaticResource SettingsPageSpacing}">
            <TextBlock Text="About" Classes="PageTitle" />

            <Border Classes="SettingsCard">
                <StackPanel Classes="SettingsCardContent">
                    <TextBlock Text="{Binding AppName}" FontSize="20" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding VersionLabel}" />
                    <TextBlock Text="LinkRouter keeps your browser routing predictable without touching the registry or requiring admin rights."
                               TextWrapping="Wrap" />
                    <Button Content="Open repository"
                            HorizontalAlignment="Left"
                            Command="{Binding OpenRepositoryCommand}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
