<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LinkRouter.Settings.Avalonia.Views.AboutPage">
    <ScrollViewer>
        <StackPanel Spacing="24" Margin="32">
            <TextBlock Text="About"
                       Style="{StaticResource SettingsPageTitleStyle}" />

            <Border Classes="SettingsCard">
                <StackPanel Spacing="12">
                    <TextBlock Text="{Binding AppName}"
                               FontSize="24"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding VersionLabel}"
                               Classes="SettingsBodyText" />
                    <Button Content="Open Repository"
                            Width="200"
                            Command="{Binding OpenRepositoryCommand}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
