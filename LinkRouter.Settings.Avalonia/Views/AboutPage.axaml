<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LinkRouter.Settings.Avalonia.Views.AboutPage">
    <ScrollViewer>
        <StackPanel Margin="24" Spacing="16">
            <TextBlock Text="About" FontSize="20" FontWeight="SemiBold" />
            <Border Classes="SettingsCard">
                <StackPanel Spacing="12">
                    <TextBlock Text="Application" Classes="CardTitle" />
                    <TextBlock Text="LinkRouter Settings information." Classes="CardDescription" />
                    <TextBlock Text="{Binding AppName}" FontSize="24" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding VersionLabel}" />
                    <Button Content="Open Repository" Command="{Binding OpenRepositoryCommand}" Width="180" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
