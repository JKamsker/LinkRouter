<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LinkRouter.Settings.Avalonia.Views.AboutPage">
    <ScrollViewer>
        <StackPanel Margin="{StaticResource SettingsPageMargin}" Spacing="20">
            <TextBlock Text="About" Style="{StaticResource SettingsHeader}" />

            <Border Style="{StaticResource SettingsCard}">
                <StackPanel Spacing="12">
                    <TextBlock Text="{Binding AppName}" FontSize="24" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding VersionLabel}" />
                    <Button Content="Open repository" Command="{Binding OpenRepositoryCommand}" Width="180" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
