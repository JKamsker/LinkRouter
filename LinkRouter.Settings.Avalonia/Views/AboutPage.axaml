<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LinkRouter.Settings.Avalonia.Views.AboutPage">
    <ScrollViewer Padding="{StaticResource PageMargin}">
        <Border Style="{StaticResource SettingsCardStyle}">
            <StackPanel Spacing="12">
                <TextBlock Text="{Binding AppName}"
                           Style="{StaticResource SectionHeaderTextStyle}" />
                <TextBlock Text="{Binding VersionLabel}" />
                <Button Content="Open Repository"
                        Command="{Binding OpenRepositoryCommand}" />
            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>
