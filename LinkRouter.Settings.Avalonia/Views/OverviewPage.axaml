<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             xmlns:conv="clr-namespace:LinkRouter.Settings.Avalonia.Converters"
             x:Class="LinkRouter.Settings.Avalonia.Views.OverviewPage">
    <UserControl.Resources>
        <conv:StringHasValueConverter x:Key="StringHasValueConverter" />
    </UserControl.Resources>

    <ScrollViewer Padding="{StaticResource PageMargin}">
        <StackPanel Style="{StaticResource SettingsSectionStack}">
            <TextBlock Text="Overview"
                       Style="{StaticResource SectionHeaderTextStyle}" />

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Configuration"
                               Style="{StaticResource SectionSubheaderTextStyle}" />
                    <TextBlock Text="Path"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding ConfigPath}"
                               TextWrapping="Wrap" />
                    <StackPanel Orientation="Horizontal"
                                Spacing="12">
                        <Button Content="Open Folder"
                                Command="{Binding OpenConfigFolderCommand}" />
                        <Button Content="Copy Path"
                                Command="{Binding CopyConfigPathCommand}" />
                    </StackPanel>

                    <TextBlock Text="Last Modified"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding LastModifiedDisplay}" />

                    <StackPanel Orientation="Horizontal"
                                Spacing="12">
                        <Button Content="Save Config"
                                Command="{Binding SaveCommand}" />
                        <Button Content="Register"
                                Command="{Binding RegisterCommand}" />
                        <Button Content="Unregister"
                                Command="{Binding UnregisterCommand}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Simulate URL"
                               Style="{StaticResource SectionSubheaderTextStyle}" />
                    <TextBox Watermark="Enter URL"
                             Text="{Binding TestUrl, Mode=TwoWay}" />
                    <Button Content="Simulate"
                            Command="{Binding SimulateCommand}" />
                    <fa:InfoBar IsVisible="{Binding SimulationSummary, Converter={StaticResource StringHasValueConverter}}"
                                Severity="Informational"
                                Title="Result"
                                Message="{Binding SimulationSummary}" />
                    <TextBlock Text="{Binding SimulationDetails}"
                               TextWrapping="Wrap"
                               IsVisible="{Binding SimulationDetails, Converter={StaticResource StringHasValueConverter}}" />
                </StackPanel>
            </Border>

            <fa:InfoBar IsVisible="{Binding HasError}"
                        Severity="Error"
                        Message="{Binding ErrorMessage}" />

            <fa:InfoBar IsVisible="{Binding StatusMessage, Converter={StaticResource StringHasValueConverter}}"
                        Severity="Success"
                        Message="{Binding StatusMessage}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
