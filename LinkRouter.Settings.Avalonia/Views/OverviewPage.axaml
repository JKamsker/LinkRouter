<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:LinkRouter.Settings.Avalonia.Converters"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             x:Class="LinkRouter.Settings.Avalonia.Views.OverviewPage">
    <UserControl.Resources>
        <conv:NullableToBooleanConverter x:Key="NullableToBooleanConverter" />
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel Margin="{StaticResource SettingsPageMargin}" Spacing="20">
            <TextBlock Text="Overview" Style="{StaticResource SettingsHeader}" />

            <Border Style="{StaticResource SettingsCard}">
                <StackPanel Spacing="16">
                    <TextBlock Text="Configuration" Style="{StaticResource SettingsSectionTitle}" />
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="8" ColumnSpacing="12">
                        <TextBlock Text="Path" FontWeight="SemiBold" />
                        <TextBlock Grid.Column="1" Text="{Binding ConfigPath}" TextWrapping="Wrap" />
                        <TextBlock Grid.Row="1" Text="Last modified" FontWeight="SemiBold" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LastModifiedDisplay}" />
                        <TextBlock Grid.Row="2" Text="Backups" FontWeight="SemiBold" />
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding BackupCount}" />
                    </Grid>

                    <WrapPanel Spacing="12">
                        <Button Content="Save changes" Command="{Binding SaveCommand}" />
                        <Button Content="Open folder" Command="{Binding OpenConfigFolderCommand}" />
                        <Button Content="Copy path" Command="{Binding CopyConfigPathCommand}" />
                    </WrapPanel>

                    <fa:InfoBar IsVisible="{Binding StatusMessage, Converter={StaticResource NullableToBooleanConverter}, FallbackValue=False, TargetNullValue=False}"
                                IsOpen="True"
                                Severity="Success"
                                Message="{Binding StatusMessage}" />
                    <fa:InfoBar IsVisible="{Binding ErrorMessage, Converter={StaticResource NullableToBooleanConverter}, FallbackValue=False, TargetNullValue=False}"
                                IsOpen="True"
                                Severity="Error"
                                Message="{Binding ErrorMessage}" />
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingsCard}">
                <StackPanel Spacing="16">
                    <TextBlock Text="Simulate URL" Style="{StaticResource SettingsSectionTitle}" />
                    <TextBox Watermark="Enter URL" Text="{Binding TestUrl, Mode=TwoWay}" />
                    <WrapPanel Spacing="12">
                        <Button Content="Simulate" Command="{Binding SimulateCommand}" />
                        <Button Content="Register" Command="{Binding RegisterCommand}" />
                        <Button Content="Unregister" Command="{Binding UnregisterCommand}" />
                    </WrapPanel>
                    <fa:InfoBar IsVisible="{Binding SimulationSummary, Converter={StaticResource NullableToBooleanConverter}, FallbackValue=False, TargetNullValue=False}"
                                IsOpen="True"
                                Severity="Success"
                                Message="{Binding SimulationSummary}" />
                    <TextBlock Text="{Binding SimulationDetails}" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
