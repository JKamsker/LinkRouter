<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             xmlns:conv="clr-namespace:LinkRouter.Settings.Avalonia.Converters"
             x:Class="LinkRouter.Settings.Avalonia.Views.OverviewPage">
    <UserControl.Resources>
        <conv:StringHasValueConverter x:Key="StringHasValueConverter" />
    </UserControl.Resources>

    <ScrollViewer>
        <StackPanel Spacing="24" Margin="32">
            <TextBlock Text="Overview"
                       Style="{StaticResource SettingsPageTitleStyle}" />

            <Border Classes="SettingsCard">
                <StackPanel Spacing="12">
                    <TextBlock Text="Configuration"
                               Style="{StaticResource SettingsSectionTitleStyle}" />
                    <TextBlock Text="Path"
                               Style="{StaticResource SettingsBodyLabelStyle}" />
                    <TextBlock Text="{Binding ConfigPath}"
                               Classes="SettingsBodyText"
                               TextWrapping="Wrap" />
                    <TextBlock Text="Last Modified"
                               Style="{StaticResource SettingsBodyLabelStyle}" />
                    <TextBlock Text="{Binding LastModifiedDisplay}"
                               Classes="SettingsBodyText" />
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Content="Save Config"
                                Command="{Binding SaveCommand}" />
                        <Button Content="Open Folder"
                                Command="{Binding OpenConfigFolderCommand}" />
                        <Button Content="Copy Path"
                                Command="{Binding CopyConfigPathCommand}" />
                    </StackPanel>
                    <fa:InfoBar Title="Status"
                                Severity="Success"
                                IsVisible="{Binding StatusMessage, Converter={StaticResource StringHasValueConverter}}"
                                Message="{Binding StatusMessage}" />
                </StackPanel>
            </Border>

            <Border Classes="SettingsCard">
                <StackPanel Spacing="12">
                    <TextBlock Text="Simulate URL"
                               Style="{StaticResource SettingsSectionTitleStyle}" />
                    <TextBox Watermark="Enter URL"
                             Text="{Binding TestUrl, Mode=TwoWay}" />
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Content="Simulate"
                                Command="{Binding SimulateCommand}" />
                        <Button Content="Register"
                                Command="{Binding RegisterCommand}" />
                        <Button Content="Unregister"
                                Command="{Binding UnregisterCommand}" />
                    </StackPanel>
                    <fa:InfoBar Title="Result"
                                Severity="Informational"
                                IsVisible="{Binding SimulationSummary, Converter={StaticResource StringHasValueConverter}}"
                                Message="{Binding SimulationSummary}" />
                    <TextBlock Text="{Binding SimulationDetails}"
                               Classes="SettingsBodyText"
                               TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <fa:InfoBar Title="Error"
                        Severity="Error"
                        IsVisible="{Binding HasError}"
                        Message="{Binding ErrorMessage}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
