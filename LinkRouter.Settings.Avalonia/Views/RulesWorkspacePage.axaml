<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LinkRouter.Settings.ViewModels;assembly=LinkRouter.Settings.Core"
             xmlns:converters="clr-namespace:Avalonia.Data.Converters;assembly=Avalonia.Base"
             x:Class="LinkRouter.Settings.Avalonia.Views.RulesWorkspacePage">
    <Grid ColumnDefinitions="2*,3*" RowDefinitions="Auto,*" Margin="16" RowSpacing="12" ColumnSpacing="12">
        <TextBlock Text="Rules" FontSize="20" FontWeight="SemiBold" Grid.ColumnSpan="2" />
        <Border Grid.Row="1" Padding="12" CornerRadius="8" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
            <Grid RowDefinitions="Auto,*" RowSpacing="12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Add" Command="{Binding AddRuleCommand}" />
                    <Button Content="Duplicate" Command="{Binding DuplicateRuleCommand}" CommandParameter="{Binding SelectedRule}" />
                    <Button Content="Delete" Command="{Binding DeleteRuleCommand}" CommandParameter="{Binding SelectedRule}" />
                    <Button Content="Move Up" Command="{Binding MoveUpCommand}" CommandParameter="{Binding SelectedRule}" />
                    <Button Content="Move Down" Command="{Binding MoveDownCommand}" CommandParameter="{Binding SelectedRule}" />
                </StackPanel>
                <ListBox Grid.Row="1" ItemsSource="{Binding Rules}" SelectedItem="{Binding SelectedRule, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Padding="12" CornerRadius="8" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
            <ScrollViewer>
                <StackPanel Spacing="12">
                    <TextBlock Text="Select a rule to view details."
                               HorizontalAlignment="Center"
                               IsVisible="{Binding SelectedRule, Converter={x:Static converters:ObjectConverters.IsNull}}" />

                    <ContentControl Content="{Binding SelectedRule}"
                                    IsVisible="{Binding SelectedRule, Converter={x:Static converters:ObjectConverters.IsNotNull}}">
                        <ContentControl.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Spacing="12">
                                    <ToggleSwitch Content="Enabled" IsChecked="{Binding Enabled, Mode=TwoWay}" />

                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Match" />
                                        <TextBlock Text="{Binding Match}" />
                                    </StackPanel>

                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Pattern" />
                                        <TextBlock Text="{Binding Pattern}" TextWrapping="Wrap" />
                                    </StackPanel>

                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Browser" />
                                        <TextBlock Text="{Binding Browser}" TextWrapping="Wrap" />
                                    </StackPanel>

                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Profile" />
                                        <TextBlock Text="{Binding Profile}" TextWrapping="Wrap" />
                                    </StackPanel>

                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Args Template" />
                                        <TextBlock Text="{Binding ArgsTemplate}" TextWrapping="Wrap" />
                                    </StackPanel>

                                    <StackPanel Spacing="4">
                                        <TextBlock Text="User Data Dir" />
                                        <TextBlock Text="{Binding UserDataDir}" TextWrapping="Wrap" />
                                    </StackPanel>

                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Working Directory" />
                                        <TextBlock Text="{Binding WorkingDirectory}" TextWrapping="Wrap" />
                                    </StackPanel>

                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Use Profile" />
                                        <TextBlock Text="{Binding UseProfile}" TextWrapping="Wrap" />
                                    </StackPanel>

                                    <Button Content="Edit rule..."
                                            HorizontalAlignment="Left"
                                            Click="OnEditRuleClick" />
                                </StackPanel>
                            </DataTemplate>
                        </ContentControl.ContentTemplate>
                    </ContentControl>

                    <Separator />
                    <StackPanel Spacing="4">
                        <TextBlock Text="Test URL" />
                        <TextBox Text="{Binding TestUrl, Mode=TwoWay}" />
                    </StackPanel>
                    <Button Content="Test Rule" Command="{Binding TestRuleCommand}" />
                    <TextBlock Text="{Binding TestResult}" TextWrapping="Wrap" />
                    <TextBlock Text="{Binding TestError}" TextWrapping="Wrap" Foreground="Red" />
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
