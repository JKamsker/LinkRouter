<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             x:Class="LinkRouter.Settings.Avalonia.Views.ProfilesPage">
    <Grid Margin="24" ColumnSpacing="16" ColumnDefinitions="2*,3*">
        <StackPanel Grid.Column="0" Spacing="12">
            <fa:CommandBar>
                <fa:CommandBar.PrimaryCommands>
                    <fa:AppBarButton Label="Add profile" Command="{Binding AddProfileCommand}">
                        <fa:AppBarButton.IconSource>
                            <fa:SymbolIconSource Symbol="Add" />
                        </fa:AppBarButton.IconSource>
                    </fa:AppBarButton>
                    <fa:AppBarButton Label="Remove" Command="{Binding RemoveProfileCommand}" CommandParameter="{Binding SelectedProfile}">
                        <fa:AppBarButton.IconSource>
                            <fa:SymbolIconSource Symbol="Delete" />
                        </fa:AppBarButton.IconSource>
                    </fa:AppBarButton>
                </fa:CommandBar.PrimaryCommands>
            </fa:CommandBar>

            <ListBox Items="{Binding Profiles}" SelectedItem="{Binding SelectedProfile, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Classes="Card" Padding="12" Margin="0 0 0 8">
                            <StackPanel Spacing="4">
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                <TextBlock Text="{Binding Browser}" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <Border Grid.Column="1" Classes="Card" Padding="16">
            <ScrollViewer>
                <StackPanel Spacing="12">
                    <TextBlock Text="Profile details" FontSize="20" FontWeight="SemiBold" />
                    <TextBox Header="Name" Text="{Binding SelectedProfile.Name, Mode=TwoWay}" />
                    <TextBox Header="Browser executable" Text="{Binding SelectedProfile.Browser, Mode=TwoWay}" Watermark="C:\\Program Files\\Browser\\browser.exe" />
                    <TextBox Header="Arguments" Text="{Binding SelectedProfile.ArgsTemplate, Mode=TwoWay}" AcceptsReturn="True" MinHeight="60" />
                    <TextBox Header="Browser profile" Text="{Binding SelectedProfile.Profile, Mode=TwoWay}" />
                    <TextBox Header="User data directory" Text="{Binding SelectedProfile.UserDataDir, Mode=TwoWay}" />
                    <TextBox Header="Working directory" Text="{Binding SelectedProfile.WorkingDirectory, Mode=TwoWay}" />

                    <Button Content="Test launch" Command="{Binding TestLaunchCommand}" CommandParameter="{Binding SelectedProfile}" />

                    <fa:InfoBar IsOpen="{Binding HasDetectionError}" Severity="Warning" Title="Detection" Message="{Binding DetectionError}" IsClosable="False" />

                    <fa:Expander Header="Detected browsers">
                        <ListBox Items="{Binding Browsers}" SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Spacing="8">
                                        <TextBlock Text="{Binding Name}" Width="160" />
                                        <TextBlock Text="{Binding Path}" HorizontalAlignment="Stretch" TextWrapping="Wrap" />
                                        <Button Content="Use" Command="{Binding DataContext.UseDetectedBrowserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </fa:Expander>

                    <fa:Expander Header="Chromium profiles">
                        <ListBox Items="{Binding ChromiumProfileDirectories}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding}" Width="300" TextWrapping="Wrap" />
                                        <Button Content="Use" Command="{Binding DataContext.UseChromiumProfileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </fa:Expander>

                    <fa:Expander Header="Firefox profiles">
                        <ListBox Items="{Binding FirefoxProfiles}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding Name}" Width="160" />
                                        <TextBlock Text="{Binding RelativePath}" Width="240" TextWrapping="Wrap" />
                                        <Button Content="Use" Command="{Binding DataContext.UseFirefoxProfileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </fa:Expander>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
