<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:LinkRouter.Settings.Avalonia.Converters"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             x:Class="LinkRouter.Settings.Avalonia.Views.ImportExportPage">
    <UserControl.Resources>
        <conv:NullableToBooleanConverter x:Key="NullableToBooleanConverter" />
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel Margin="{StaticResource SettingsPageMargin}" Spacing="20">
            <TextBlock Text="Import &amp; Export" Style="{StaticResource SettingsHeader}" />

            <Border Style="{StaticResource SettingsCard}">
                <StackPanel Spacing="16">
                    <TextBlock Text="Import configuration" Style="{StaticResource SettingsSectionTitle}" />
                    <StackPanel Spacing="4">
                        <TextBlock Text="Import path" />
                        <TextBox Text="{Binding ImportPath, Mode=TwoWay}" />
                    </StackPanel>
                    <WrapPanel Spacing="12">
                        <Button Content="Analyze" Command="{Binding AnalyzeImportCommand}" />
                        <Button Content="Merge" Command="{Binding MergeCommand}" />
                        <Button Content="Replace" Command="{Binding ReplaceCommand}" />
                    </WrapPanel>
                    <fa:InfoBar IsVisible="{Binding DiffSummary, Converter={StaticResource NullableToBooleanConverter}, FallbackValue=False, TargetNullValue=False}"
                                IsOpen="True"
                                Severity="Informational"
                                Message="{Binding DiffSummary}" />
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingsCard}">
                <StackPanel Spacing="16">
                    <TextBlock Text="Export configuration" Style="{StaticResource SettingsSectionTitle}" />
                    <StackPanel Spacing="4">
                        <TextBlock Text="Export path" />
                        <TextBox Text="{Binding ExportPath, Mode=TwoWay}" />
                    </StackPanel>
                    <Button Content="Export" Command="{Binding ExportCommand}" HorizontalAlignment="Left" />
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingsCard}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Backups" Style="{StaticResource SettingsSectionTitle}" />
                    <ListBox ItemsSource="{Binding Backups}" SelectedItem="{Binding SelectedBackup, Mode=TwoWay}" Height="220">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Spacing="2">
                                    <TextBlock Text="{Binding FileName}" />
                                    <TextBlock Text="{Binding TimestampDisplay}" FontSize="11" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Content="Restore selected" Command="{Binding RestoreBackupCommand}" CommandParameter="{Binding SelectedBackup}" HorizontalAlignment="Left" />
                </StackPanel>
            </Border>

            <fa:InfoBar IsVisible="{Binding Error, Converter={StaticResource NullableToBooleanConverter}, FallbackValue=False, TargetNullValue=False}"
                        IsOpen="True"
                        Severity="Error"
                        Message="{Binding Error}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
