<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LinkRouter.Settings.ViewModels;assembly=LinkRouter.Settings.Core"
             x:Class="LinkRouter.Settings.Avalonia.Views.ImportExportPage">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="{StaticResource SettingsPageMargin}"
                    Spacing="{StaticResource SettingsPageSpacing}">
            <TextBlock Text="Import &amp; Export" Classes="PageTitle" />

            <StackPanel Spacing="{StaticResource SettingsCardSpacing}">
                <Border Classes="SettingsCard">
                    <StackPanel Classes="SettingsCardContent">
                        <TextBlock Text="Import configuration" Classes="SectionTitle" />
                        <StackPanel Classes="SectionContent">
                            <TextBlock Text="Import path" FontWeight="SemiBold" />
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                <TextBox Grid.Column="0"
                                         Text="{Binding ImportPath, Mode=TwoWay}" />
                                <Button Grid.Column="1"
                                        Content="Browse..."
                                        Command="{Binding BrowseImportCommand}" />
                            </Grid>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Button Content="Analyze" Command="{Binding AnalyzeImportCommand}" />
                            <Button Content="Merge" Command="{Binding MergeCommand}" />
                            <Button Content="Replace" Command="{Binding ReplaceCommand}" />
                        </StackPanel>
                        <TextBlock Text="{Binding DiffSummary}" TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <Border Classes="SettingsCard">
                    <StackPanel Classes="SettingsCardContent">
                        <TextBlock Text="Export configuration" Classes="SectionTitle" />
                        <StackPanel Classes="SectionContent">
                            <TextBlock Text="Export path" FontWeight="SemiBold" />
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                <TextBox Grid.Column="0"
                                         Text="{Binding ExportPath, Mode=TwoWay}" />
                                <Button Grid.Column="1"
                                        Content="Browse..."
                                        Command="{Binding BrowseExportCommand}" />
                            </Grid>
                        </StackPanel>
                        <Button Content="Export" Command="{Binding ExportCommand}" HorizontalAlignment="Left" />
                    </StackPanel>
                </Border>

                <Border Classes="SettingsCard">
                    <StackPanel Classes="SettingsCardContent">
                        <TextBlock Text="Backups" Classes="SectionTitle" />
                        <ListBox ItemsSource="{Binding Backups}" SelectedItem="{Binding SelectedBackup, Mode=TwoWay}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding FileName}" />
                                        <TextBlock Text="{Binding TimestampDisplay}" FontSize="12" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Content="Restore selected"
                                Command="{Binding RestoreBackupCommand}"
                                CommandParameter="{Binding SelectedBackup}" />
                    </StackPanel>
                </Border>

                <Border Classes="InlineStatus"
                        Background="#10FF0000"
                        BorderBrush="#40FF0000"
                        IsVisible="{Binding HasError}">
                    <TextBlock Text="{Binding Error}"
                               Foreground="Red"
                               TextWrapping="Wrap" />
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
