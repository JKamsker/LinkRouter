<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             x:Class="LinkRouter.Settings.Avalonia.Views.ImportExportPage">
    <ScrollViewer>
        <StackPanel Spacing="16" Margin="24">
            <Border Classes="Card" Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="Import configuration" FontSize="20" FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBox Width="400" Text="{Binding ImportPath, Mode=TwoWay}" Watermark="Select JSON file" />
                        <Button Content="Browse" Command="{Binding BrowseImportCommand}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Analyze" Command="{Binding AnalyzeImportCommand}" />
                        <Button Content="Merge" Command="{Binding MergeCommand}" />
                        <Button Content="Replace" Command="{Binding ReplaceCommand}" />
                    </StackPanel>
                    <fa:InfoBar IsOpen="{Binding Error, Converter={StaticResource StringToBooleanConverter}}" Severity="Error" Message="{Binding Error}" IsClosable="False" />
                    <TextBox Text="{Binding DiffSummary}" AcceptsReturn="True" IsReadOnly="True" MinHeight="120" />
                </StackPanel>
            </Border>

            <Border Classes="Card" Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="Export configuration" FontSize="20" FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBox Width="400" Text="{Binding ExportPath, Mode=TwoWay}" Watermark="Destination file" />
                        <Button Content="Browse" Command="{Binding BrowseExportCommand}" />
                    </StackPanel>
                    <Button Content="Export" Command="{Binding ExportCommand}" />
                </StackPanel>
            </Border>

            <Border Classes="Card" Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock Text="Backups" FontSize="20" FontWeight="SemiBold" />
                    <ItemsControl Items="{Binding Backups}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12" Margin="0 0 0 8" Classes="Card">
                                    <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                                        <StackPanel>
                                            <TextBlock Text="{Binding FileName}" FontWeight="SemiBold" />
                                            <TextBlock Text="{Binding TimestampDisplay}" />
                                        </StackPanel>
                                        <Button Content="Restore" Command="{Binding DataContext.RestoreBackupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
