<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             x:Class="LinkRouter.Settings.Avalonia.Views.ImportExportPage">
    <ScrollViewer>
        <StackPanel Spacing="16" Margin="24">
            <TextBlock Text="Import &amp; Export" FontSize="20" FontWeight="SemiBold" />

            <Border Classes="SettingsCard">
                <StackPanel Spacing="12">
                    <TextBlock Text="Import configuration" Classes="CardTitle" />
                    <TextBlock Text="Load settings from an existing mappings file." Classes="CardDescription" />
                    <StackPanel Spacing="4">
                        <TextBlock Text="Import Path" />
                        <TextBox Text="{Binding ImportPath, Mode=TwoWay}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Analyze" Command="{Binding AnalyzeImportCommand}" />
                        <Button Content="Merge" Command="{Binding MergeCommand}" />
                        <Button Content="Replace" Command="{Binding ReplaceCommand}" />
                    </StackPanel>
                    <TextBlock Text="{Binding DiffSummary}" TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <Border Classes="SettingsCard">
                <StackPanel Spacing="12">
                    <TextBlock Text="Export configuration" Classes="CardTitle" />
                    <TextBlock Text="Save current settings to disk." Classes="CardDescription" />
                    <StackPanel Spacing="4">
                        <TextBlock Text="Export Path" />
                        <TextBox Text="{Binding ExportPath, Mode=TwoWay}" />
                    </StackPanel>
                    <Button Content="Export" Command="{Binding ExportCommand}" />
                </StackPanel>
            </Border>

            <Border Classes="SettingsCard">
                <StackPanel Spacing="12">
                    <TextBlock Text="Backups" Classes="CardTitle" />
                    <TextBlock Text="Restore a previous configuration snapshot." Classes="CardDescription" />
                    <ListBox ItemsSource="{Binding Backups}" SelectedItem="{Binding SelectedBackup, Mode=TwoWay}" MinHeight="200">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Spacing="2">
                                    <TextBlock Text="{Binding FileName}" />
                                    <TextBlock Text="{Binding TimestampDisplay}" FontSize="11" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Content="Restore Selected" Command="{Binding RestoreBackupCommand}" CommandParameter="{Binding SelectedBackup}" />
                </StackPanel>
            </Border>

            <fa:InfoBar Title="Error"
                        Severity="Error"
                        IsOpen="{Binding HasError}"
                        Message="{Binding Error}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
