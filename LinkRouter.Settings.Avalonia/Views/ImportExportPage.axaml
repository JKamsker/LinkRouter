<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             xmlns:conv="clr-namespace:LinkRouter.Settings.Avalonia.Converters"
             x:Class="LinkRouter.Settings.Avalonia.Views.ImportExportPage">
    <UserControl.Resources>
        <conv:StringHasValueConverter x:Key="StringHasValueConverter" />
    </UserControl.Resources>

    <ScrollViewer Padding="{StaticResource PageMargin}">
        <StackPanel Style="{StaticResource SettingsSectionStack}">
            <TextBlock Text="Import &amp; Export"
                       Style="{StaticResource SectionHeaderTextStyle}" />

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Import configuration"
                               Style="{StaticResource SectionSubheaderTextStyle}" />
                    <TextBox Watermark="Import path"
                             Text="{Binding ImportPath, Mode=TwoWay}" />
                    <StackPanel Orientation="Horizontal"
                                Spacing="12">
                        <Button Content="Analyze"
                                Command="{Binding AnalyzeImportCommand}" />
                        <Button Content="Merge"
                                Command="{Binding MergeCommand}" />
                        <Button Content="Replace"
                                Command="{Binding ReplaceCommand}" />
                    </StackPanel>
                    <TextBlock Text="{Binding DiffSummary}"
                               TextWrapping="Wrap"
                               IsVisible="{Binding DiffSummary, Converter={StaticResource StringHasValueConverter}}" />
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Export configuration"
                               Style="{StaticResource SectionSubheaderTextStyle}" />
                    <TextBox Watermark="Export path"
                             Text="{Binding ExportPath, Mode=TwoWay}" />
                    <Button Content="Export"
                            Command="{Binding ExportCommand}" />
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Backups"
                               Style="{StaticResource SectionSubheaderTextStyle}" />
                    <ListBox ItemsSource="{Binding Backups}"
                             SelectedItem="{Binding SelectedBackup, Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Spacing="2">
                                    <TextBlock Text="{Binding FileName}" />
                                    <TextBlock Text="{Binding TimestampDisplay}"
                                               FontSize="11"
                                               Foreground="#666" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Content="Restore Selected"
                            Command="{Binding RestoreBackupCommand}"
                            CommandParameter="{Binding SelectedBackup}" />
                </StackPanel>
            </Border>

            <fa:InfoBar IsVisible="{Binding HasError}"
                        Severity="Error"
                        Message="{Binding Error}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
