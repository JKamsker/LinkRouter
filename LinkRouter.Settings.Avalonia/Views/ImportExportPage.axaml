<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             xmlns:conv="clr-namespace:LinkRouter.Settings.Avalonia.Converters"
             x:Class="LinkRouter.Settings.Avalonia.Views.ImportExportPage">
    <UserControl.Resources>
        <conv:StringHasValueConverter x:Key="StringHasValueConverter" />
    </UserControl.Resources>

    <ScrollViewer>
        <StackPanel Spacing="24" Margin="32">
            <TextBlock Text="Import &amp; Export"
                       Style="{StaticResource SettingsPageTitleStyle}" />

            <Border Classes="SettingsCard">
                <StackPanel Spacing="16">
                    <TextBlock Text="Import configuration"
                               Style="{StaticResource SettingsSectionTitleStyle}" />
                    <StackPanel Spacing="8">
                        <TextBlock Text="Import Path"
                                   Style="{StaticResource SettingsBodyLabelStyle}" />
                        <TextBox Text="{Binding ImportPath, Mode=TwoWay}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Content="Analyze" Command="{Binding AnalyzeImportCommand}" />
                        <Button Content="Merge" Command="{Binding MergeCommand}" />
                        <Button Content="Replace" Command="{Binding ReplaceCommand}" />
                    </StackPanel>
                    <fa:InfoBar Title="Diff summary"
                                Severity="Informational"
                                IsVisible="{Binding DiffSummary, Converter={StaticResource StringHasValueConverter}}"
                                Message="{Binding DiffSummary}" />
                </StackPanel>
            </Border>

            <Border Classes="SettingsCard">
                <StackPanel Spacing="16">
                    <TextBlock Text="Export configuration"
                               Style="{StaticResource SettingsSectionTitleStyle}" />
                    <StackPanel Spacing="8">
                        <TextBlock Text="Export Path"
                                   Style="{StaticResource SettingsBodyLabelStyle}" />
                        <TextBox Text="{Binding ExportPath, Mode=TwoWay}" />
                    </StackPanel>
                    <Button Content="Export" Command="{Binding ExportCommand}" />
                </StackPanel>
            </Border>

            <Border Classes="SettingsCard">
                <StackPanel Spacing="16">
                    <TextBlock Text="Backups"
                               Style="{StaticResource SettingsSectionTitleStyle}" />
                    <ListBox ItemsSource="{Binding Backups}"
                             SelectedItem="{Binding SelectedBackup, Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Spacing="4">
                                    <TextBlock Text="{Binding FileName}" />
                                    <TextBlock Text="{Binding TimestampDisplay}"
                                               Classes="SettingsBodyText" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Content="Restore Selected"
                            Command="{Binding RestoreBackupCommand}"
                            CommandParameter="{Binding SelectedBackup}" />
                </StackPanel>
            </Border>

            <fa:InfoBar Title="Error"
                        Severity="Error"
                        IsVisible="{Binding HasError}"
                        Message="{Binding Error}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
