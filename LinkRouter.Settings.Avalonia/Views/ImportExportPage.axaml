<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LinkRouter.Settings.ViewModels;assembly=LinkRouter.Settings.Core"
             x:Class="LinkRouter.Settings.Avalonia.Views.ImportExportPage">
    <ScrollViewer>
        <StackPanel Spacing="16" Margin="16">
            <TextBlock Text="Import &amp; Export" FontSize="20" FontWeight="SemiBold" />
            <Border Padding="12" CornerRadius="8" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Import configuration" FontWeight="SemiBold" />
                    <TextBox Header="Import Path" Text="{Binding ImportPath, Mode=TwoWay}" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Analyze" Command="{Binding AnalyzeImportCommand}" />
                        <Button Content="Merge" Command="{Binding MergeCommand}" />
                        <Button Content="Replace" Command="{Binding ReplaceCommand}" />
                    </StackPanel>
                    <TextBlock Text="{Binding DiffSummary}" TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <Border Padding="12" CornerRadius="8" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Export configuration" FontWeight="SemiBold" />
                    <TextBox Header="Export Path" Text="{Binding ExportPath, Mode=TwoWay}" />
                    <Button Content="Export" Command="{Binding ExportCommand}" />
                </StackPanel>
            </Border>

            <Border Padding="12" CornerRadius="8" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                <StackPanel Spacing="8">
                    <TextBlock Text="Backups" FontWeight="SemiBold" />
                    <ListBox Items="{Binding Backups}" SelectedItem="{Binding SelectedBackup, Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Spacing="2">
                                    <TextBlock Text="{Binding FileName}" />
                                    <TextBlock Text="{Binding TimestampDisplay}" FontSize="11" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Content="Restore Selected" Command="{Binding RestoreBackupCommand}" CommandParameter="{Binding SelectedBackup}" />
                </StackPanel>
            </Border>

            <Border Padding="12" Background="#33FF0000" CornerRadius="4" IsVisible="{Binding HasError}">
                <TextBlock Text="{Binding Error}" Foreground="Red" />
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
