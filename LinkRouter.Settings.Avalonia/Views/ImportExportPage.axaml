<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LinkRouter.Settings.Core.ViewModels;assembly=LinkRouter.Settings.Core"
             x:Class="LinkRouter.Settings.Avalonia.Views.ImportExportPage"
             x:DataType="vm:ImportExportViewModel">
    <ScrollViewer Padding="24">
        <StackPanel Spacing="12">
            <TextBlock Text="Import / Export" FontSize="24"/>
            <TextBlock Text="Import path:"/>
            <TextBlock Text="{Binding ImportPath}"/>
            <TextBlock Text="Export path:"/>
            <TextBlock Text="{Binding ExportPath}"/>
            <TextBlock Text="Diff summary:"/>
            <TextBlock Text="{Binding DiffSummary}" TextWrapping="Wrap"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
