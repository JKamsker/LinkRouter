<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:LinkRouter.Settings.Avalonia.Converters"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             x:Class="LinkRouter.Settings.Avalonia.Views.AdvancedPage">
    <UserControl.Resources>
        <conv:NullableToBooleanConverter x:Key="NullableToBooleanConverter" />
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel Margin="{StaticResource SettingsPageMargin}" Spacing="20">
            <TextBlock Text="Advanced" Style="{StaticResource SettingsHeader}" />

            <Border Style="{StaticResource SettingsCard}">
                <StackPanel Spacing="16">
                    <TextBlock Text="Diagnostics" Style="{StaticResource SettingsSectionTitle}" />
                    <ToggleSwitch Content="Enable launch logging" IsChecked="{Binding IsLoggingEnabled, Mode=TwoWay}" />
                    <WrapPanel Spacing="12">
                        <Button Content="Open config folder" Command="{Binding OpenConfigFolderCommand}" />
                        <Button Content="Open log file" Command="{Binding OpenLogFileCommand}" />
                        <Button Content="Open default apps" Command="{Binding OpenDefaultAppsCommand}" />
                    </WrapPanel>
                    <fa:InfoBar IsVisible="{Binding Error, Converter={StaticResource NullableToBooleanConverter}, FallbackValue=False, TargetNullValue=False}"
                                IsOpen="True"
                                Severity="Error"
                                Message="{Binding Error}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
