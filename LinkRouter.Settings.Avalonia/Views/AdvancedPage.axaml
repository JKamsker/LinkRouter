<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             x:Class="LinkRouter.Settings.Avalonia.Views.AdvancedPage">
    <ScrollViewer>
        <StackPanel Spacing="16" Margin="24">
            <TextBlock Text="Advanced" FontSize="20" FontWeight="SemiBold" />
            <Border Classes="SettingsCard">
                <StackPanel Spacing="12">
                    <TextBlock Text="Troubleshooting" Classes="CardTitle" />
                    <TextBlock Text="Access logs and configuration folders." Classes="CardDescription" />
                    <ToggleSwitch Content="Enable launch logging" IsChecked="{Binding IsLoggingEnabled, Mode=TwoWay}" />
                    <Button Content="Open Config Folder" Command="{Binding OpenConfigFolderCommand}" />
                    <Button Content="Open Log File" Command="{Binding OpenLogFileCommand}" />
                    <Button Content="Open Default Apps" Command="{Binding OpenDefaultAppsCommand}" />
                </StackPanel>
            </Border>

            <fa:InfoBar Title="Error"
                        Severity="Error"
                        IsOpen="{Binding HasError}"
                        Message="{Binding Error}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
