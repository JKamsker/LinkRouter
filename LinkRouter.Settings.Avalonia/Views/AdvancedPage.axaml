<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             x:Class="LinkRouter.Settings.Avalonia.Views.AdvancedPage">
    <ScrollViewer>
        <StackPanel Spacing="24" Margin="32">
            <TextBlock Text="Advanced"
                       Style="{StaticResource SettingsPageTitleStyle}" />

            <Border Classes="SettingsCard">
                <StackPanel Spacing="16">
                    <ToggleSwitch Content="Enable launch logging"
                                  IsChecked="{Binding IsLoggingEnabled, Mode=TwoWay}" />
                    <Button Content="Open Config Folder"
                            Command="{Binding OpenConfigFolderCommand}" />
                    <Button Content="Open Log File"
                            Command="{Binding OpenLogFileCommand}" />
                    <Button Content="Open Default Apps"
                            Command="{Binding OpenDefaultAppsCommand}" />
                    <fa:InfoBar Title="Error"
                                Severity="Error"
                                IsVisible="{Binding HasError}"
                                Message="{Binding Error}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
