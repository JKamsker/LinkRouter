<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LinkRouter.Settings.Core.ViewModels;assembly=LinkRouter.Settings.Core"
             x:Class="LinkRouter.Settings.Avalonia.Views.AdvancedPage"
             x:DataType="vm:AdvancedViewModel">
    <ScrollViewer Padding="24">
        <StackPanel Spacing="12">
            <TextBlock Text="Advanced" FontSize="24"/>
            <ToggleSwitch Content="Enable logging" IsChecked="{Binding IsLoggingEnabled}"/>
            <TextBlock Text="Errors" FontWeight="Bold"/>
            <TextBlock Text="{Binding Error}" TextWrapping="Wrap"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
