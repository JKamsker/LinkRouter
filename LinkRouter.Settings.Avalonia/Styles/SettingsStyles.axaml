<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="Border.SettingsCard">
        <Setter Property="Margin" Value="0,0,0,16" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}" />
    </Style>

    <Style Selector="TextBlock.CardTitle">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <Style Selector="TextBlock.CardDescription">
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
        <Setter Property="Margin" Value="0,0,0,12" />
    </Style>

    <Style Selector="TextBlock.ValidationErrorText">
        <Setter Property="Foreground" Value="{DynamicResource SystemFillColorCriticalBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>
</Styles>
