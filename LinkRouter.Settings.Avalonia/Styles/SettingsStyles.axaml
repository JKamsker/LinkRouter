<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Styles.Resources>
    <Thickness x:Key="PageMargin">24,24,24,24</Thickness>
    <Thickness x:Key="CardSpacing">0,0,0,16</Thickness>
    <Thickness x:Key="CardPadding">16</Thickness>
  </Styles.Resources>

  <Style Selector="Border.settings-card">
    <Setter Property="Padding" Value="{StaticResource CardPadding}" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}" />
    <Setter Property="Margin" Value="{StaticResource CardSpacing}" />
  </Style>

  <Style Selector="Border.settings-card:last-child">
    <Setter Property="Margin" Value="0" />
  </Style>
</Styles>
