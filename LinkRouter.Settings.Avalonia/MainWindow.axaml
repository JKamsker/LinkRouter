<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="using:FluentAvalonia.UI.Controls"
        x:Class="LinkRouter.Settings.Avalonia.MainWindow"
        Width="1024"
        Height="720"
        TransparencyLevelHint="Mica"
        Background="Transparent"
        Title="LinkRouter Settings">
    <fa:NavigationView MenuItemsSource="{Binding Pages}"
                       SelectedItem="{Binding SelectedPage, Mode=TwoWay}"
                       IsBackButtonVisible="False"
                       IsSettingsVisible="False"
                       PaneDisplayMode="LeftCompact"
                       Header="{Binding CurrentTitle}">
        <fa:NavigationView.MenuItemTemplate>
            <DataTemplate>
                <fa:NavigationViewItem Content="{Binding Title}" />
            </DataTemplate>
        </fa:NavigationView.MenuItemTemplate>

        <ContentControl Margin="0"
                        Content="{Binding CurrentContent}" />
    </fa:NavigationView>
</Window>
