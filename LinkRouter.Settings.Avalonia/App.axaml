<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sty="using:FluentAvalonia.Styling"
             x:Class="LinkRouter.Settings.Avalonia.App"
             RequestedThemeVariant="Default">
    <Application.Styles>
        <sty:FluentAvaloniaTheme ForceWin11Style="True"
                                 PreferSystemTheme="True"
                                 UseMicaEffect="True" />
        <StyleInclude Source="avares://LinkRouter.Settings.Avalonia/Resources/Styles.axaml" />
    </Application.Styles>

    <Application.DataTemplates>
        <ResourceInclude Source="avares://LinkRouter.Settings.Avalonia/Resources/Views.axaml" />
    </Application.DataTemplates>
</Application>
