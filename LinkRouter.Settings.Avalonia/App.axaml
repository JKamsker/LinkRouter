<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sty="using:FluentAvalonia.Styling"
             xmlns:vm="clr-namespace:LinkRouter.Settings.ViewModels;assembly=LinkRouter.Settings.Core"
             xmlns:views="using:LinkRouter.Settings.Avalonia.Views"
             x:Class="LinkRouter.Settings.Avalonia.App"
             RequestedThemeVariant="Default">
  <Application.Styles>
    <sty:FluentAvaloniaTheme />
    <StyleInclude Source="avares://LinkRouter.Settings.Avalonia/Styles/SettingsStyles.axaml" />
  </Application.Styles>

  <Application.DataTemplates>
    <DataTemplate DataType="{x:Type vm:GeneralViewModel}">
      <views:OverviewPage />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:RulesViewModel}">
      <views:RulesWorkspacePage />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ProfilesViewModel}">
      <views:ProfilesPage />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ImportExportViewModel}">
      <views:ImportExportPage />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:AdvancedViewModel}">
      <views:AdvancedPage />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:AboutViewModel}">
      <views:AboutPage />
    </DataTemplate>
  </Application.DataTemplates>
</Application>
