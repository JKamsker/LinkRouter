<Page
    x:Class="LinkRouter.Settings.Views.ImportExportPage"
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewModels="using:LinkRouter.Settings.ViewModels"
    xmlns:services="using:LinkRouter.Settings.Services"
    x:DataType="viewModels:ImportExportViewModel"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewModels:ImportExportViewModel />
    </Page.DataContext>

    <ScrollViewer>
        <StackPanel Spacing="16" Margin="16">
            <muxc:SettingsCard Header="Import">
                <StackPanel Spacing="8">
                    <TextBox PlaceholderText="Path to JSON" Text="{x:Bind ImportPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Analyze" Command="{x:Bind AnalyzeImportCommand}" />
                        <Button Content="Merge" Command="{x:Bind MergeCommand}" />
                        <Button Content="Replace" Command="{x:Bind ReplaceCommand}" />
                    </StackPanel>
                    <TextBlock Text="{x:Bind DiffSummary}" TextWrapping="Wrap" />
                </StackPanel>
            </muxc:SettingsCard>

            <muxc:SettingsCard Header="Export">
                <StackPanel Spacing="8">
                    <TextBox PlaceholderText="Destination path" Text="{x:Bind ExportPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Content="Export" Command="{x:Bind ExportCommand}" />
                </StackPanel>
            </muxc:SettingsCard>

            <muxc:SettingsCard Header="Backups">
                <ItemsControl ItemsSource="{x:Bind Backups}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="services:ConfigBackup">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{x:Bind FileName}" Width="180" />
                                <TextBlock Text="{x:Bind TimestampUtc, StringFormat='{}{0:G}'}" Width="200" />
                                <Button Content="Restore" Command="{x:Bind ((viewModels:ImportExportViewModel)PageRoot.DataContext).RestoreBackupCommand}" CommandParameter="{x:Bind}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </muxc:SettingsCard>

            <TextBlock Text="{x:Bind Error}" Foreground="{ThemeResource ErrorTextBrush}" TextWrapping="Wrap" />
        </StackPanel>
    </ScrollViewer>
</Page>
