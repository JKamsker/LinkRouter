<Page
    x:Class="LinkRouter.Settings.Views.ImportExportPage"
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:LinkRouter.Settings.Controls"
    xmlns:viewModels="using:LinkRouter.Settings.ViewModels"
    xmlns:services="using:LinkRouter.Settings.Services"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewModels:ImportExportViewModel />
    </Page.DataContext>

    <ScrollViewer>
        <StackPanel Spacing="16" Margin="16">
            <controls:SettingsCard Header="Import">
                <StackPanel Spacing="8">
                    <TextBox PlaceholderText="Path to JSON" Text="{x:Bind ViewModel.ImportPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Analyze" Command="{x:Bind ViewModel.AnalyzeImportCommand}" />
                        <Button Content="Merge" Command="{x:Bind ViewModel.MergeCommand}" />
                        <Button Content="Replace" Command="{x:Bind ViewModel.ReplaceCommand}" />
                    </StackPanel>
                    <TextBlock Text="{x:Bind ViewModel.DiffSummary}" TextWrapping="Wrap" />
                </StackPanel>
            </controls:SettingsCard>

            <controls:SettingsCard Header="Export">
                <StackPanel Spacing="8">
                    <TextBox PlaceholderText="Destination path" Text="{x:Bind ViewModel.ExportPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Content="Export" Command="{x:Bind ViewModel.ExportCommand}" />
                </StackPanel>
            </controls:SettingsCard>

            <controls:SettingsCard Header="Backups">
                <ItemsControl ItemsSource="{Binding Backups}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{Binding FileName}" Width="180" />
                                <TextBlock Text="{Binding TimestampDisplay}" Width="200" />
                                <Button Content="Restore" Click="RestoreBackup_Click" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </controls:SettingsCard>

            <TextBlock Text="{x:Bind ViewModel.Error}" Foreground="{ThemeResource SystemFillColorCriticalBrush}" TextWrapping="Wrap" />
        </StackPanel>
    </ScrollViewer>
</Page>
