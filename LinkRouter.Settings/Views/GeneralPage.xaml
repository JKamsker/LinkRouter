<Page
    x:Class="LinkRouter.Settings.Views.GeneralPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewModels="using:LinkRouter.Settings.ViewModels"
    xmlns:services="using:LinkRouter.Settings.Services"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewModels:GeneralViewModel />
    </Page.DataContext>

    <ScrollViewer>
        <StackPanel Spacing="24" Margin="16">
            <controls:SettingsCard Header="Configuration file">
                <StackPanel Spacing="12">
                    <TextBlock Text="{x:Bind ViewModel.ConfigPath, Mode=OneWay}" TextWrapping="Wrap" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Last modified:" />
                        <TextBlock Text="{x:Bind ViewModel.LastModifiedDisplay, Mode=OneWay}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Save" Command="{x:Bind ViewModel.SaveCommand}" IsEnabled="{x:Bind ViewModel.HasUnsavedChanges, Mode=OneWay}" />
                        <ProgressRing Width="24" Height="24" IsActive="{x:Bind ViewModel.IsSaving, Mode=OneWay}" />
                        <InfoBar IsOpen="{x:Bind ViewModel.HasUnsavedChanges, Mode=OneWay}" Severity="Warning" Message="Unsaved changes" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Open folder" Command="{x:Bind ViewModel.OpenConfigFolderCommand}" />
                        <Button Content="Copy path" Command="{x:Bind ViewModel.CopyConfigPathCommand}" />
                    </StackPanel>
                    <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" />
                    <TextBlock Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}" Foreground="{ThemeResource SystemFillColorCriticalBrush}" TextWrapping="Wrap" />
                </StackPanel>
            </controls:SettingsCard>

            <controls:SettingsCard Header="Backups">
                <StackPanel Spacing="12">
                    <TextBlock Text="Recent automatic backups appear here after you save changes." TextWrapping="Wrap" />
                    <ListView ItemsSource="{Binding Backups}" MaxHeight="240">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnSpacing="16" Padding="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding FileName}" />
                                    <TextBlock Grid.Column="1" Text="{Binding TimestampDisplay}" />
                                    <TextBlock Grid.Column="2" Text="{Binding SizeBytes, Converter={StaticResource ByteSizeToStringConverter}}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="16,0,0,0" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </controls:SettingsCard>
        </StackPanel>
    </ScrollViewer>
</Page>
