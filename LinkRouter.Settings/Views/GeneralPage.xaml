<Page
    x:Class="LinkRouter.Settings.Views.GeneralPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewModels="using:LinkRouter.Settings.ViewModels"
    xmlns:services="using:LinkRouter.Settings.Services"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewModels:GeneralViewModel />
    </Page.DataContext>

    <ScrollViewer>
        <StackPanel Spacing="16" Margin="16">
            <StackPanel Spacing="8">
                <TextBlock Text="Configuration file" Style="{StaticResource SettingsCardHeaderTextStyle}" />
                <Border Style="{StaticResource SettingsCardBorderStyle}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Location" Style="{StaticResource BodyStrongTextBlockStyle}" />
                        <TextBlock TextWrapping="Wrap" Text="{x:Bind ViewModel.ConfigPath, Mode=OneWay}" />
                        <TextBlock Text="Last modified:" />
                        <TextBlock Text="{x:Bind ViewModel.LastModifiedDisplay, Mode=OneWay}" />
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="Open folder" Command="{x:Bind ViewModel.OpenConfigFolderCommand}" />
                            <Button Content="Copy path" Command="{x:Bind ViewModel.CopyConfigPathCommand}" />
                            <Button Content="Save" Command="{x:Bind ViewModel.SaveCommand}" IsEnabled="{x:Bind ViewModel.HasUnsavedChanges}" />
                            <ProgressRing Width="24" Height="24" IsActive="{x:Bind ViewModel.IsSaving}" />
                        </StackPanel>
                        <InfoBar IsOpen="{x:Bind ViewModel.HasUnsavedChanges, Mode=OneWay}" Severity="Attention" Message="Unsaved changes" />
                        <InfoBar IsOpen="{x:Bind ViewModel.HasError, Mode=OneWay}" Severity="Error" Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}" />
                        <TextBlock Text="{x:Bind ViewModel.StatusMessage}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock Text="Backups" Style="{StaticResource BodyStrongTextBlockStyle}" />
                        <ItemsControl ItemsSource="{Binding Backups}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding FileName}" />
                                        <TextBlock Grid.Column="1" Text="{Binding TimestampDisplay}" Margin="16,0,0,0" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
