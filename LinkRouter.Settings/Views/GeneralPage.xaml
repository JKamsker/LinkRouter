<Page
    x:Class="LinkRouter.Settings.Views.GeneralPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewModels="using:LinkRouter.Settings.ViewModels"
    xmlns:services="using:LinkRouter.Settings.Services"
    x:DataType="viewModels:GeneralViewModel"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewModels:GeneralViewModel />
    </Page.DataContext>

    <ScrollViewer>
        <StackPanel Spacing="16" Margin="16">
            <muxc:SettingsCard Header="Configuration">
                <StackPanel Spacing="8">
                    <TextBlock Text="Config file" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBlock TextWrapping="Wrap" Text="{x:Bind ConfigPath, Mode=OneWay}"/>
                    <TextBlock Text="Last modified:"/>
                    <TextBlock Text="{x:Bind LastModified, Mode=OneWay, StringFormat='{}{0:G}'}" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Open folder" Command="{x:Bind OpenConfigFolderCommand}" />
                        <Button Content="Copy path" Command="{x:Bind CopyConfigPathCommand}" />
                        <Button Content="Save" Command="{x:Bind SaveCommand}" IsEnabled="{x:Bind HasUnsavedChanges}" />
                        <ProgressRing Width="24" Height="24" IsActive="{x:Bind IsSaving}" />
                    </StackPanel>
                    <TextBlock Text="{x:Bind StatusMessage}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock Text="Backups" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <ItemsControl ItemsSource="{x:Bind Backups}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="services:ConfigBackup">
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{x:Bind FileName}" />
                                    <TextBlock Grid.Column="1" Text="{x:Bind TimestampUtc, StringFormat='{}{0:G}'}" Margin="16,0,0,0" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </muxc:SettingsCard>

            <muxc:SettingsCard Header="Registration">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Register" Command="{x:Bind RegisterCommand}" />
                    <Button Content="Unregister" Command="{x:Bind UnregisterCommand}" />
                </StackPanel>
            </muxc:SettingsCard>

            <muxc:SettingsCard Header="Test URL">
                <StackPanel Spacing="8">
                    <TextBox PlaceholderText="https://example.com" Text="{x:Bind TestUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Content="Simulate" Command="{x:Bind SimulateCommand}" />
                    <InfoBar IsOpen="{x:Bind ErrorMessage != null, Mode=OneWay}" Severity="Error" Message="{x:Bind ErrorMessage, Mode=OneWay}" />
                    <TextBlock Text="{x:Bind SimulationSummary}" TextWrapping="Wrap" />
                    <TextBlock Text="{x:Bind SimulationDetails}" TextWrapping="Wrap" FontFamily="Consolas" />
                </StackPanel>
            </muxc:SettingsCard>
        </StackPanel>
    </ScrollViewer>
</Page>
