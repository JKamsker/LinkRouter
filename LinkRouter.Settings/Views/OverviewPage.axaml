<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LinkRouter.Settings.ViewModels"
             x:Class="LinkRouter.Settings.Views.OverviewPage">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="{StaticResource SettingsPageMargin}"
                    Spacing="{StaticResource SettingsPageSpacing}">
            <TextBlock Text="Overview" Classes="PageTitle" />

            <StackPanel Spacing="{StaticResource SettingsCardSpacing}">
                <Border Classes="SettingsCard">
                    <StackPanel Classes="SettingsCardContent">
                        <TextBlock Text="Configuration" Classes="SectionTitle" />
                        <StackPanel Classes="SectionContent">
                            <TextBlock Text="Path" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding ConfigPath}" TextWrapping="Wrap" />
                        </StackPanel>
                        <StackPanel Classes="SectionContent">
                            <TextBlock Text="Last modified" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding LastModifiedDisplay}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                            <Button Content="Save configuration"
                                    Command="{Binding SaveCommand}"
                                    IsEnabled="{Binding CanSave}" />
                            <Button Content="Open folder" Command="{Binding OpenConfigFolderCommand}" />
                            <Button Content="Copy path" Command="{Binding CopyConfigPathCommand}" />
                            <ProgressBar Width="120"
                                         Height="20"
                                         IsIndeterminate="True"
                                         IsVisible="{Binding IsSaving}" />
                        </StackPanel>
                        <Separator Margin="0,12,0,0" />
                        <StackPanel Classes="SectionContent"
                                    IsVisible="{Binding CanConfigureAutostart}">
                            <TextBlock Text="Launch on sign-in" FontWeight="SemiBold" />
                            <ToggleSwitch Content="Start LinkRouter Settings in the background"
                                          HorizontalAlignment="Left"
                                          IsChecked="{Binding IsAutostartEnabled, Mode=TwoWay}" />
                        </StackPanel>
                        <Separator Margin="0,12,0,0"
                                   IsVisible="{Binding CanConfigureAutostart}" />
                        <StackPanel Classes="SectionContent"
                                    IsVisible="{Binding CannotConfigureAutostart}">
                            <TextBlock Text="Autostart is only available on Windows builds."
                                       TextWrapping="Wrap" />
                        </StackPanel>
                        <StackPanel Classes="SectionContent">
                            <TextBlock Text="Register as default Browser" FontWeight="SemiBold" />
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Button Content="Register" Command="{Binding RegisterCommand}" />
                                <Button Content="Unregister" Command="{Binding UnregisterCommand}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Classes="SettingsCard">
                    <StackPanel Classes="SettingsCardContent">
                        <TextBlock Text="Test URL" Classes="SectionTitle" />
                        <StackPanel Classes="SectionContent" Spacing="12">
                            <TextBox Watermark="Enter URL" Text="{Binding TestUrl, Mode=TwoWay}" />
                            <Button Content="Launch" Command="{Binding LaunchTestCommand}" HorizontalAlignment="Left" />
                            <TextBlock Text="{Binding SimulationSummary}" TextWrapping="Wrap" />
                            <TextBlock Text="{Binding SimulationDetails}" TextWrapping="Wrap" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Classes="InlineStatus"
                        Background="#10FF0000"
                        BorderBrush="#40FF0000"
                        IsVisible="{Binding HasError}">
                    <TextBlock Text="{Binding ErrorMessage}"
                               TextWrapping="Wrap"
                               Foreground="Red" />
                </Border>

                <TextBlock Text="{Binding StatusMessage}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
