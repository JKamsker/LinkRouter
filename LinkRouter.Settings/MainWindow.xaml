<Window
    x:Class="LinkRouter.Settings.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:LinkRouter.Settings"
    mc:Ignorable="d">
    <NavigationView x:Name="RootNavigationView"
                    PaneDisplayMode="Left"
                    IsBackButtonVisible="Collapsed"
                    IsSettingsVisible="False"
                    SelectionChanged="OnNavigationSelectionChanged">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Overview" Icon="Home" Tag="Overview" />
            <NavigationViewItem Content="General" Icon="Document" Tag="General" />
            <NavigationViewItem Content="Rules" Icon="List" Tag="Rules" />
            <NavigationViewItem Content="Browsers &amp; Profiles" Icon="People" Tag="Profiles" />
            <NavigationViewItem Content="Default" Icon="Favorite" Tag="Default" />
            <NavigationViewItem Content="Import / Export" Icon="Sync" Tag="ImportExport" />
            <NavigationViewItem Content="Advanced" Icon="AllApps" Tag="Advanced" />
            <NavigationViewItem Content="About" Icon="Help" Tag="About" />
        </NavigationView.MenuItems>
        <NavigationView.Content>
            <Frame x:Name="ContentFrame" IsNavigationStackEnabled="False" />
        </NavigationView.Content>
    </NavigationView>
</Window>
