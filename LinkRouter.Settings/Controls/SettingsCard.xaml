<UserControl
    x:Class="LinkRouter.Settings.Controls.SettingsCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="{x:Bind Header, Mode=OneWay}" Style="{StaticResource SettingsCardHeaderTextStyle}" />
        <Border Style="{StaticResource SettingsCardBorderStyle}">
            <ContentPresenter Content="{x:Bind Content, Mode=OneWay}" />
        </Border>
    </StackPanel>
</UserControl>
